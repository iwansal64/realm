---

interface Props {
    title:string,
};

const { title }  = Astro.props; 

---


<html lang="en">
	<head>
		<meta charset="utf-8" />
		<meta name="viewport" content="width=device-width" />
		<meta name="generator" content={Astro.generator} />
        <meta name="description" content="Ridwan Bagoes Setiawan Profile Website">
		<link rel="shortcut icon" href="/realm-logo-blk.webp" type="image/x-icon">
		<title>{title}</title>
	</head>
	<body>
        <slot />
		<script src="../typescript/appear.ts" />
	</body>
</html>

<style is:global>
	@font-face {
		font-family: fira code;
		src: url("../fonts/Fira_Code/static/FiraCode-Light.ttf"),
		url("../fonts/Fira_Code/static/FiraCode-Medium.ttf"),
		url("../fonts/Fira_Code/static/FiraCode-Regular.ttf"),
		url("../fonts/Fira_Code/static/FiraCode-SemiBold.ttf"),
		url("../fonts/Fira_Code/static/FiraCode-Bold.ttf")
		;
		font-weight: 300;
		font-style: normal;
		font-display: swap;
	}

    * {
        font-family: 'fira code', calibri;
		color: white;
		user-select: none;
		margin:0;
		padding:0;
		font-weight: 300;
		scroll-behavior: smooth;
    }

	html {
		overflow: hidden auto;
		width: 100vw;
		height: 100vh;
	}
	
	body {
		overflow: hidden auto;
		background-color: #205;
		min-height: 100vh;
	}

	button {
		background-color: #205;
		border: none;
		padding: 5px 15px;
		cursor: pointer;
	}

	::-webkit-scrollbar {
		width: 5px;
		background-color: #111;
	}

	::-webkit-scrollbar-thumb {
		background: #50c;
	}

	@media (max-width: 600px) {
		html {
			font-size: 12px;
		}
	}

	.smooth.appear {
		transform: translateX(0);
		transition: 1.25s;
	}

	@media (max-width: 600px) {
		.smooth.appear {
			transform: translateX(0);
			transition: 1s;
		}
	}

	.smooth:not(.appear) {
		opacity: 0 !important;
		transform: translateX(-10%) !important;
		pointer-events: none !important;
	}
</style>