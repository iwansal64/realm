---

interface Props {
    title:string,
};

const { title }  = Astro.props; 

---


<html lang="en">
	<head>
		<meta charset="utf-8" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<meta name="viewport" content="width=device-width" />
		<meta name="generator" content={Astro.generator} />
        <meta name="description" content="Ridwan Bagoes Setiawan Profile Website">
		<title>{title}</title>
	</head>
	<body>
        <slot />
	</body>
</html>

<style is:global>
    * {
        font-family: calibri;
		color: white;
		user-select: none;
		margin:0;
		padding:0;
    }

	html {
		width: 100vw;
		height: 100vh;
	}
	
	body {
		overflow: hidden auto;
		background-color: #40a;
	}

	button {
		background-color: #40a;
		border: none;
		padding: 5px 15px;
		cursor: pointer;
	}

	::-webkit-scrollbar {
		width: 5px;
		background-color: #111;
	}

	::-webkit-scrollbar-thumb {
		background: #50c;
	}
</style>